{
  "private": true,
  "scripts": {
    "build": "rimraf build && tsc --project .",
    "lint": "tsc --project . --noEmit && tslint --project . && prettier-check --ignore-path .gitignore \"{.,src/**}/{*.ts,*.md,ts*.json,*.graphql}\"",
    "format": "prettier --write --ignore-path .gitignore \"{.,src/**}/{*.ts,*.md,ts*.json,*.graphql}\"",
    "start": "ts-node-dev --respawn --notify=false src",
    "start:prod": "cross-env NODE_ENV=production node build"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "cross-env": "^5.1.5",
    "envalid": "^4.1.4",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-server-express": "^1.3.6",
    "graphql-subscriptions": "^0.5.8",
    "graphql-tools": "^3.0.1",
    "graphql-type-json": "^0.2.1",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mongoose": "^5.1.1",
    "passport": "^0.4.0",
    "passport-telegram-official": "^1.0.3",
    "paypal-rest-sdk": "^1.8.1",
    "subscriptions-transport-ws": "^0.9.9"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.13.1",
    "@types/graphql-type-json": "^0.1.2",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/lodash": "^4.14.109",
    "@types/mongoose": "^5.0.14",
    "@types/passport": "^0.4.5",
    "@types/paypal-rest-sdk": "^1.7.2",
    "prettier": "^1.12.1",
    "prettier-check": "^2.0.0",
    "rimraf": "^2.6.2",
    "ts-node-dev": "^1.0.0-pre.22",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "^2.8.3"
  }
}
